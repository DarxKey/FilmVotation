mixin card
   .main-card
      form(name="invia")
         .top-card
            h3 Matteo
         .middle-card
            .film-one
               label.best-movie Il Curioso Caso Di Benjamin Button
               .valori
                  span Value
                  select
                     option(value="10") 10
                     option(value="5") 5
                     option(value="1") 1
            .film-two
               label Film num-2
               .valori
                  span Value
                  select
                     option(value="10") 10
                     option(value="5") 5
                     option(value="1") 1
            .film-three
               label Film num-3
               .valori
                  span Value
                  select
                     option(value="10") 10
                     option(value="5") 5
                     option(value="1") 1
         .bottom-card
            button.btn-fucsia(type="submit" value="Vota") Vota

doctype html
head
   title Film Votation
   link(rel="stylesheet" href="css/main.css" type="text/css")
   meta(name="viewport" content="width=device-width, initial-scale=1")
   link(href='https://fonts.googleapis.com/css?family=Roboto:400,300,500,700' rel='stylesheet' type='text/css')
body
   
   .menu
      .icon-close
         img(src="img/close.png")
      ul
         a(href="aggiungi.php"): li Aggiungi
         a(href="aggiungi.php"): li Reset
   
   .container 
      .header
         .menu-icon Menu
         h1 Film Votation
      .main-content
         h2 Selezione Film
         p 
         +card  
         +card
         +card
         +card
         +card
         +card
         +card
         
         .votazioni
            h2 La Decisione Finale
            .sez-random#rnd-nome
               .pres-random
                  h4 Randomizzatore Nome Prescelto
                  p Clicca il pulsante qui sotto per scoprire chi dovr&agrave; premere il pulsante che svelever&agrave; il film di questa sera!
               .btn-random
                  button.btn-fucsia#btn-rnd-nome(type="button") Randomizza
               .testo-random
                  h5#testo-rnd-nome Matteo!
            .sez-random#rnd-film
               .pres-random
                  h4 Randomizzatore Film
                  p Matteo, clicca il pulsante qu&igrave; sotto per scoprire che film, vedrete stasera!
               .btn-random
                  button.btn-fucsia#btn-rnd-film(type="button") Randomizza
               .testo-random
                  h5#testo-rnd-nome-film Matteo
                  p#testo-rnd-film Il Curioso Caso Di Benjamin Button
   
   script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" type="text/javascript")
   script(src="js/app.js" type="text/javascript")
