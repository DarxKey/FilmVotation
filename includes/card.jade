mixin card
   .main-card
      form(name="invia")
         .top-card
            h3.uppercase.let-xs-small Matteo
         .middle-card
            .film-one
               label.capitalize.best-movie Il Curioso Caso Di Benjamin Button
               .valori
                  span Value
                  select
                     option(value="10") 10
                     option(value="5") 5
                     option(value="1") 1
            .film-two
               label.capitalize Film num-2
               .valori
                  span Value
                  select
                     option(value="10") 10
                     option(value="5") 5
                     option(value="1") 1
            .film-three
               label.capitalize Film num-3
               .valori
                  span Value
                  select
                     option(value="10") 10
                     option(value="5") 5
                     option(value="1") 1
         .bottom-card
            button.btn-fucsia(type="submit" value="Vota") Vota
